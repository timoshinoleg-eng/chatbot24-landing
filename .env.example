# Database
DATABASE_URL="postgresql://user:password@localhost:5432/chatbot24?schema=public"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-here-generate-a-random-string"

# OAuth Providers (optional - configure as needed)
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth
GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# Telegram OAuth (if using)
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"

# App Configuration
APP_NAME="ChatBot24"
APP_URL="http://localhost:3000"

# API Keys (if needed for external services)
# OPENAI_API_KEY="your-openai-api-key"
# ANTHROPIC_API_KEY="your-anthropic-api-key"

# Email Configuration (for notifications)
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@example.com"
# SMTP_PASSWORD="your-email-password"
# FROM_EMAIL="noreply@chatbot24.com"

# Feature Flags
ENABLE_REGISTRATION="true"
ENABLE_SOCIAL_LOGIN="true"
